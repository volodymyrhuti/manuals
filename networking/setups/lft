sysctl -w net.ipv4.ip_forward=1
sudo ip addr change 110.0.0.1/8 dev ens9 valid_lft 960 preferred_lft 900
sudo ip addr change 210.0.0.1/8 dev ens10 valid_lft forever preferred_lft forever
sudo ip addr replace 30.0.0.1/8 dev ens9 valid_lft forever preferred_lft forever
sudo ip addr replace 40.0.0.1/8 dev ens10 valid_lft 960 preferred_lft 900

