sysctl -w net.ipv4.ip_forward=1
ifconfig eth1p1 up
ifconfig eth1p24 up
ip addr change 110.0.0.1/8 dev eth1p1 valid_lft 960 preferred_lft 900
ip addr replace 30.0.0.1/8 dev eth1p1 valid_lft forever preferred_lft forever
ip addr replace 40.0.0.1/8 dev eth1p24 valid_lft 960 preferred_lft 900
ip addr change 210.0.0.1/8 dev eth1p24 valid_lft forever preferred_lft forever
sleep 1
ip addr change 110.0.0.1/8 dev eth1p1 valid_lft 1 preferred_lft 0
ip addr replace 40.0.0.1/8 dev eth1p24 valid_lft 1 preferred_lft 0
sleep 1.3
ip -d addr show eth1p1
ip -d addr show eth1p24

sudo ip addr add 1.1.1.1/24 dev ens4
sudo ip route add 1.1.1.0/24 dev ens4
ip addr change 1.1.1.1/24 dev ens4 valid_lft 10 preferred_lft 10

ip route add 1.1.1.0/24 dev br-lan


